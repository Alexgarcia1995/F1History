<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.alejandro.demo_mockups">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Resultados"
            android:label="@string/title_activity_resultados"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Anyo_campeonato"
            android:label="@string/title_activity_anyo_campeonato"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Ajustes"
            android:label="@string/title_activity_ajustes"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Contact"
            android:label="@string/title_activity_contact"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".About"
            android:label="@string/title_activity_about"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".LoginActivity"
            android:label="@string/title_activity_login"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".Clasificacion"
            android:label="@string/title_activity_clasificacion"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Circuitos"
            android:label="@string/title_activity_circuitos"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Calendario"
            android:label="@string/title_activity_calendario"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Pilotos"
            android:label="@string/title_activity_pilotos"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Equipos"
            android:label="@string/title_activity_equipos"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Grid_item"
            android:label="@string/title_activity_grid_item"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".Detalles_Pilotos"
            android:label="@string/title_activity_detalles__pilotos"
            android:parentActivityName=".Pilotos"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.alejandro.demo_mockups.Pilotos" />
        </activity>
        <activity
            android:name=".Detalles_Equipos"
            android:label="Detalles_Equipos"
            android:parentActivityName=".Equipos"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.alejandro.demo_mockups.Equipos" />
        </activity>
        <activity
            android:name=".Detalles_Circuitos"
            android:label="@string/title_activity_detalles__circuitos"
            android:parentActivityName=".Circuitos"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.alejandro.demo_mockups.Circuitos" />
        </activity>
        <activity
            android:name=".Grid_List"
            android:label="@string/title_activity_grid__list"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Detalles_Resultados"
            android:label="@string/title_activity_detalles__resultados"
            android:parentActivityName=".Resultados"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.alejandro.demo_mockups.Resultados" />
        </activity>
    </application>

</manifest>